@model IEnumerable<ContactPro.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="row">
    <div class="col-12 text-end mb-2">
        <a asp-action="Create" class="btn btn-primary rounded-pill">Create New</a>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th colspan="2">
                        My Categories
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => category.Name)
                        </td>
                        <td class="d-flex justify-content-end">
                            <a class="me-3 editIcons" asp-action="Edit" asp-route-id="@category.Id" asp-controller="Categories"><i class="bi bi-pencil-fill"></i></a>
                            <a class="me-3 editIcons" asp-action="EmailCategory" asp-route-Id="@category.Id" asp-controller="Categories"><i class="bi bi-envelope-fill"></i></a>
                            <a class="editIcons text-danger" asp-action="Delete" asp-route-id="@category.Id" asp-controller="Categories"><i class="bi bi-trash-fill "></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
@section scripts{
    <!--sweet alerts-->
    <script>
        let message = '@(ViewBag.SwalMessage)';

        if (!message.includes("Error") && message != '') {
            Swal.fire({
                icon: 'success',
                title: message,
                showConfirmButton: true
            })
        } else if (message.includes("Error")) {
            Swal.fire({
                backDrop: flase,
                icon: 'error',
                title: 'Oops...',
                text: message
            })
        }
    </script>

}

